import com.amazonaws.services.s3.AmazonS3;
import com.amazonaws.services.s3.model.S3ObjectSummary;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import java.io.File;
import java.util.List;
import java.util.stream.Collectors;

@Service
public class S3FileService {

    private static final String BUCKET_NAME = "your-bucket-name"; // replace with your bucket name

    @Autowired
    private AmazonS3 amazonS3;

    public void uploadFile(File newFile) {
        // List existing files
        List<S3ObjectSummary> existingFiles = amazonS3.listObjects(BUCKET_NAME).getObjectSummaries();

        // Check if there are more than 3 files
        if (existingFiles.size() >= 3) {
            // Sort files by last modified date (oldest first)
            List<S3ObjectSummary> filesToDelete = existingFiles.stream()
                    .sorted((a, b) -> a.getLastModified().compareTo(b.getLastModified()))
                    .limit(existingFiles.size() - 2) // Keep the latest 2 files
                    .collect(Collectors.toList());

            // Delete the old files
            for (S3ObjectSummary file : filesToDelete) {
                amazonS3.deleteObject(BUCKET_NAME, file.getKey());
            }
        }

        // Now upload the new file
        try {
            amazonS3.putObject(BUCKET_NAME, newFile.getName(), newFile);
        } catch (Exception e) {
            throw new S3FileUploadException("Failed to upload file: " + e.getMessage(), e);
        }
    }
}
